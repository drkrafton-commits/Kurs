<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.kurs.AuthController"
      alignment="CENTER" spacing="40"
      prefWidth="440" prefHeight="956"
      style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Text fx:id="headerText" />

    <VBox alignment="CENTER_LEFT" spacing="10" prefWidth="360">
        <Text fx:id="loginLabel" />
        <TextField fx:id="loginField" onAction="#handleLogin" prefWidth="360" prefHeight="45" />
    </VBox>

    <VBox alignment="CENTER_LEFT" spacing="10" prefWidth="360">
        <Text fx:id="passwordLabel" />
        <PasswordField fx:id="passwordField" onAction="#handleLogin" prefWidth="360" prefHeight="45" />
    </VBox>

    <VBox alignment="CENTER" spacing="20" prefWidth="360">
        <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="220" prefHeight="45" />
        <Button fx:id="registerButton" onAction="#handleRegistration" prefWidth="220" prefHeight="45" />
    </VBox>
</VBox>