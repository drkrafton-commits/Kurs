<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sayana.Controllers.AuthController"
      prefWidth="440"
      prefHeight="600"
      >


    <!-- Поле логина -->
    <Text layoutX="0" layoutY="140" text="Login"
          style="-fx-font-family: 'Arial'; -fx-font-size: 32px; -fx-font-weight: bold; -fx-text-alignment: center;"
          wrappingWidth="440"/>

    <TextField fx:id="loginField" layoutX="60" layoutY="170" prefWidth="320" prefHeight="50"
               style="-fx-background-color: linear-gradient(to bottom right, #5C5B61, #1A573A); -fx-opacity: 0.8; -fx-text-fill: white; -fx-font-size: 16px; -fx-prompt-text-fill: #CCCCCC; -fx-border-radius: 25px; -fx-background-radius: 25px; -fx-padding: 0 20px;"/>

    <!-- Поле пароля -->
    <Text layoutX="0" layoutY="250" text="Password"
          style="-fx-font-family: 'Arial'; -fx-font-size: 32px; -fx-font-weight: bold; -fx-text-alignment: center;"
          wrappingWidth="440"/>

    <PasswordField fx:id="passwordField" layoutX="60" layoutY="280" prefWidth="320" prefHeight="50"
                   style="-fx-background-color: linear-gradient(to bottom right, #5C5B61, #1A573A); -fx-opacity: 0.8; -fx-text-fill: white; -fx-font-size: 16px; -fx-prompt-text-fill: #CCCCCC; -fx-border-radius: 25px; -fx-background-radius: 25px; -fx-padding: 0 20px;"/>

    <!-- Кнопка входа -->
    <Button fx:id="loginButton" layoutX="177" layoutY="360" prefWidth="85" prefHeight="85"
            style="-fx-background-color: linear-gradient(to bottom right, #5C5B61, #1A573A); -fx-border-color: #1E1E1E; -fx-border-width: 4px; -fx-border-radius: 20px; -fx-background-radius: 20px;"
            onAction="#handleLogin"/>

    <!-- Кнопка регистрации -->
    <Button fx:id="registerButton" layoutX="60" layoutY="480" prefWidth="320" prefHeight="50"
            style="-fx-background-color: linear-gradient(to bottom right, #5C5B61, #1A573A); -fx-opacity: 0.8; -fx-border-radius: 25px; -fx-background-radius: 25px; -fx-font-family: 'Arial'; -fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: black;"
            text="Регистрация"
            onAction="#handleRegistration"/>

</Pane>