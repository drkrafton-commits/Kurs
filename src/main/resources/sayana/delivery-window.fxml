<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sayana.Controllers.DeliveryController"
            style="-fx-background-color: white;"
            stylesheets="@styles.css">

    <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-background-color: white;">

        <!-- Верхняя панель -->
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: linear-gradient(to bottom right, #5C5B61, #1A573A); -fx-padding: 15;">
            <Button text="← Назад"
                    styleClass="button-gradient"
                    onAction="#handleBack"/>
            <Text text="Доставка"
                  style="-fx-font-family: 'Arial'; -fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: white;"/>
        </HBox>

        <!-- Содержимое -->
        <VBox spacing="20" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">
            <Text text="Информация о доставке"
                  style="-fx-font-family: 'Arial'; -fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #000000;"/>

            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa; -fx-background-radius: 10;">
                <Text text="• Бесплатная доставка при заказе от 2000 руб."
                      style="-fx-font-size: 14px; -fx-fill: #000000;"/>
                <Text text="• Стоимость доставки: 300 руб."
                      style="-fx-font-size: 14px; -fx-fill: #000000;"/>
                <Text text="• Время доставки: 2-4 часа"
                      style="-fx-font-size: 14px; -fx-fill: #000000;"/>
                <Text text="• Работаем с 9:00 до 21:00"
                      style="-fx-font-size: 14px; -fx-fill: #000000;"/>
            </VBox>

            <Text text="Оформить доставку"
                  style="-fx-font-family: 'Arial'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #000000;"/>

            <VBox spacing="10">
                <Text text="Адрес доставки:" style="-fx-font-weight: bold; -fx-fill: #000000;"/>
                <TextField fx:id="addressField" promptText="Введите адрес" styleClass="text-field-custom"/>

                <Text text="Телефон:" style="-fx-font-weight: bold; -fx-fill: #000000;"/>
                <TextField fx:id="phoneField" promptText="+7 (XXX) XXX-XX-XX" styleClass="text-field-custom"/>

                <Text text="Время доставки:" style="-fx-font-weight: bold; -fx-fill: #000000;"/>
                <TextField fx:id="timeField" promptText="Укажите удобное время" styleClass="text-field-custom"/>
            </VBox>

            <Button text="Оформить заказ"
                    styleClass="button-gradient-large"
                    onAction="#handleOrder"/>
        </VBox>
    </VBox>

</AnchorPane>