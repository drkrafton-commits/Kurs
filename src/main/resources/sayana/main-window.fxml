<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sayana.Controllers.MainController"
            stylesheets="@styles.css">

    <!-- Основной контейнер с градиентным фоном -->
    <VBox fx:id="mainContainer" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-background-color: linear-gradient(91.89deg, #FF6E1A 0%, #737373 100%);">

        <!-- Верхняя панель с информацией пользователя -->
        <HBox fx:id="topPanel" spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: rgba(0,0,0,0.1); -fx-padding: 15;">
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Text fx:id="welcomeText" style="-fx-font-family: 'Arial'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: white;"/>
                <Text fx:id="userInfoLabel" style="-fx-font-family: 'Arial'; -fx-font-size: 12px; -fx-fill: white;"
                      wrappingWidth="300"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="Выход"
                    style="-fx-background-color: #D9A520; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;"
                    onAction="#handleLogout"/>
        </HBox>

        <!-- Основная область меню -->
        <VBox fx:id="menuContainer" spacing="20" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">

            <!-- Карточка Цветы -->
            <HBox fx:id="flowersCard" styleClass="menu-card"
                  onMouseClicked="#handleFlowersClick" HBox.hgrow="ALWAYS">
                <Rectangle width="80" height="80" arcWidth="20" arcHeight="20"
                           style="-fx-fill: #D9D9D9;"/>
                <VBox spacing="5" style="-fx-padding: 0 0 0 20;" VBox.vgrow="ALWAYS">
                    <Text text="Цветы" styleClass="menu-title"/>
                    <Text text="Свежие букеты и композиции" styleClass="menu-subtitle"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="›" styleClass="menu-arrow"/>
            </HBox>

            <!-- Карточка Растения -->
            <HBox fx:id="plantsCard" styleClass="menu-card" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handlePlantsClick">
                <Rectangle width="80" height="80" arcWidth="20" arcHeight="20"
                           style="-fx-fill: #D9D9D9;"/>
                <VBox spacing="5" style="-fx-padding: 0 0 0 20;" VBox.vgrow="ALWAYS">
                    <Text text="Растения" styleClass="menu-title"/>
                    <Text text="Комнатные и садовые растения" styleClass="menu-subtitle"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="›" styleClass="menu-arrow"/>
            </HBox>

            <!-- Карточка Доставка -->
            <HBox fx:id="deliveryCard" styleClass="menu-card" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleDeliveryClick">
                <Rectangle width="80" height="80" arcWidth="20" arcHeight="20"
                           style="-fx-fill: #D9D9D9;"/>
                <VBox spacing="5" style="-fx-padding: 0 0 0 20;" VBox.vgrow="ALWAYS">
                    <Text text="Доставка" styleClass="menu-title"/>
                    <Text text="Быстрая доставка по городу" styleClass="menu-subtitle"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="›" styleClass="menu-arrow"/>
            </HBox>

            <!-- Карточка Профиль -->
            <HBox fx:id="profileCard" styleClass="menu-card" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleProfileClick">
                <Rectangle width="80" height="80" arcWidth="20" arcHeight="20"
                           style="-fx-fill: #D9D9D9;"/>
                <VBox spacing="5" style="-fx-padding: 0 0 0 20;" VBox.vgrow="ALWAYS">
                    <Text text="Профиль" styleClass="menu-title"/>
                    <Text text="Личные данные и настройки" styleClass="menu-subtitle"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="›" styleClass="menu-arrow"/>
            </HBox>

        </VBox>

        <!-- Нижняя панель навигации -->
        <HBox fx:id="bottomNav" spacing="0" alignment="CENTER"
              style="-fx-background-color: linear-gradient(152.51deg, #5C5B61 15.92%, #1A573A 61.47%); -fx-padding: 20;">

            <!-- Кнопка Профиль -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleProfileClick" styleClass="bottom-nav-item">
                <Rectangle width="30" height="30" arcWidth="8" arcHeight="8"
                           style="-fx-fill: transparent; -fx-stroke: #D9A520; -fx-stroke-width: 2;"/>
                <Text text="Профиль" style="-fx-font-size: 10px; -fx-fill: #D9A520;"/>
            </VBox>

            <!-- Кнопка Поиск -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleSearchClick" styleClass="bottom-nav-item">
                <Rectangle width="30" height="30" arcWidth="8" arcHeight="8"
                           style="-fx-fill: transparent; -fx-stroke: #D9A520; -fx-stroke-width: 2;"/>
                <Text text="Поиск" style="-fx-font-size: 10px; -fx-fill: #D9A520;"/>
            </VBox>

            <!-- Кнопка Главная -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleHomeClick" styleClass="bottom-nav-item">
                <Rectangle width="40" height="40" arcWidth="12" arcHeight="12"
                           style="-fx-fill: #D9A520;"/>
                <Text text="Главная" style="-fx-font-size: 10px; -fx-fill: #D9A520;"/>
            </VBox>

            <!-- Кнопка Корзина -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleCartClick" styleClass="bottom-nav-item">
                <Rectangle width="30" height="30" arcWidth="8" arcHeight="8"
                           style="-fx-fill: transparent; -fx-stroke: #D9A520; -fx-stroke-width: 2;"/>
                <Text text="Корзина" style="-fx-font-size: 10px; -fx-fill: #D9A520;"/>
            </VBox>

            <!-- Кнопка Избранное -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleFavoritesClick" styleClass="bottom-nav-item">
                <Rectangle width="30" height="30" arcWidth="8" arcHeight="8"
                           style="-fx-fill: transparent; -fx-stroke: #D9A520; -fx-stroke-width: 2;"/>
                <Text text="Избранное" style="-fx-font-size: 10px; -fx-fill: #D9A520;"/>
            </VBox>

        </HBox>

    </VBox>

</AnchorPane>