<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sayana.Controllers.MainController"
            style="-fx-background-color: white;"
            stylesheets="@styles.css">

    <!-- Основной контейнер -->
    <VBox fx:id="mainContainer" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-background-color: white;">

        <!-- Верхняя панель с информацией пользователя -->
        <HBox fx:id="topPanel" spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: linear-gradient(to bottom right, #5C5B61, #1A573A); -fx-padding: 15; -fx-background-radius: 0 0 20 20;">
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Text fx:id="welcomeText" style="-fx-font-family: 'Arial'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: white;"/>
                <Text fx:id="userInfoLabel" style="-fx-font-family: 'Arial'; -fx-font-size: 12px; -fx-fill: white;"
                      wrappingWidth="300"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="Выход"
                    styleClass="button-gradient"
                    onAction="#handleLogout"/>
        </HBox>

        <!-- Основная область меню -->
        <VBox fx:id="menuContainer" spacing="20" style="-fx-padding: 30; -fx-background-color: white;" VBox.vgrow="ALWAYS">

            <!-- Карточка Цветы -->
            <HBox fx:id="flowersCard" styleClass="menu-card"
                  onMouseClicked="#handleFlowersClick" HBox.hgrow="ALWAYS">
                <Rectangle width="80" height="80" arcWidth="20" arcHeight="20"
                           style="-fx-fill: #D9D9D9;"/>
                <VBox spacing="5" style="-fx-padding: 0 0 0 20;" VBox.vgrow="ALWAYS">
                    <Text text="Цветы" style="-fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 24px; -fx-fill: #000000;"/>
                    <Text text="Свежие букеты и композиции" style="-fx-font-family: 'Arial'; -fx-font-size: 14px; -fx-fill: #000000;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="›" style="-fx-font-family: 'Arial'; -fx-font-size: 36px; -fx-fill: #000000; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Карточка Растения -->
            <HBox fx:id="plantsCard" styleClass="menu-card" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handlePlantsClick">
                <Rectangle width="80" height="80" arcWidth="20" arcHeight="20"
                           style="-fx-fill: #D9D9D9;"/>
                <VBox spacing="5" style="-fx-padding: 0 0 0 20;" VBox.vgrow="ALWAYS">
                    <Text text="Растения" style="-fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 24px; -fx-fill: #000000;"/>
                    <Text text="Комнатные и садовые растения" style="-fx-font-family: 'Arial'; -fx-font-size: 14px; -fx-fill: #000000;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="›" style="-fx-font-family: 'Arial'; -fx-font-size: 36px; -fx-fill: #000000; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Карточка Заказы -->
            <HBox fx:id="ordersCard" styleClass="menu-card" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleDeliveryClick">
                <Rectangle width="80" height="80" arcWidth="20" arcHeight="20"
                           style="-fx-fill: #D9D9D9;"/>
                <VBox spacing="5" style="-fx-padding: 0 0 0 20;" VBox.vgrow="ALWAYS">
                    <Text text="Мои заказы" style="-fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 24px; -fx-fill: #000000;"/>
                    <Text text="История и статусы заказов" style="-fx-font-family: 'Arial'; -fx-font-size: 14px; -fx-fill: #000000;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="›" style="-fx-font-family: 'Arial'; -fx-font-size: 36px; -fx-fill: #000000; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Карточка Профиль -->
            <HBox fx:id="profileCard" styleClass="menu-card" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleProfileClick">
                <Rectangle width="80" height="80" arcWidth="20" arcHeight="20"
                           style="-fx-fill: #D9D9D9;"/>
                <VBox spacing="5" style="-fx-padding: 0 0 0 20;" VBox.vgrow="ALWAYS">
                    <Text text="Профиль" style="-fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 24px; -fx-fill: #000000;"/>
                    <Text text="Личные данные и настройки" style="-fx-font-family: 'Arial'; -fx-font-size: 14px; -fx-fill: #000000;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="›" style="-fx-font-family: 'Arial'; -fx-font-size: 36px; -fx-fill: #000000; -fx-font-weight: bold;"/>
            </HBox>

        </VBox>

        <!-- Нижняя панель навигации -->
        <HBox fx:id="bottomNav" spacing="0" alignment="CENTER"
              style="-fx-background-color: linear-gradient(to bottom right, #5C5B61, #1A573A); -fx-padding: 20;">

            <!-- Кнопка Профиль -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleProfileClick" styleClass="bottom-nav-item">
                <Rectangle width="30" height="30" arcWidth="8" arcHeight="8"
                           styleClass="nav-icon"/>
                <Text text="Профиль" style="-fx-font-size: 10px; -fx-fill: white;"/>
            </VBox>

            <!-- Кнопка Поиск -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleSearchClick" styleClass="bottom-nav-item">
                <Rectangle width="30" height="30" arcWidth="8" arcHeight="8"
                           styleClass="nav-icon"/>
                <Text text="Админ" style="-fx-font-size: 10px; -fx-fill: white;"/>
            </VBox>

            <!-- Кнопка Главная -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleHomeClick" styleClass="bottom-nav-item">
                <Rectangle width="40" height="40" arcWidth="12" arcHeight="12"
                           styleClass="nav-icon-main"/>
                <Text text="Главная" style="-fx-font-size: 10px; -fx-fill: white;"/>
            </VBox>

            <!-- Кнопка Корзина -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleCartClick" styleClass="bottom-nav-item">
                <Rectangle width="30" height="30" arcWidth="8" arcHeight="8"
                           styleClass="nav-icon"/>
                <Text text="Корзина" style="-fx-font-size: 10px; -fx-fill: white;"/>
            </VBox>

            <!-- Кнопка Избранное -->
            <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                  onMouseClicked="#handleFavoritesClick" styleClass="bottom-nav-item">
                <Rectangle width="30" height="30" arcWidth="8" arcHeight="8"
                           styleClass="nav-icon"/>
                <Text text="Избранное" style="-fx-font-size: 10px; -fx-fill: white;"/>
            </VBox>

        </HBox>

    </VBox>

</AnchorPane>